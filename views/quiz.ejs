    </div>
  </div>

  <script>
    // Correct answers for each question
    const correctAnswers = ['B', 'C', 'A', 'C', 'C', 'C'];

    // Function to check the answer
    function checkAnswer(questionNumber, selectedAnswer) {
      const correctAnswer = correctAnswers[questionNumber - 1]; // Get the correct answer
      const answerText = document.getElementById(`answer-text-${questionNumber}`);

      if (selectedAnswer === correctAnswer) {
        answerText.innerText = "Correct! ðŸŽ‰";
        answerText.style.color = "#4CAF50"; // Green color for correct answer

        // Fade out the answer text after 1 second
        setTimeout(() => {
          answerText.style.opacity = '0';
        }, 1000);

        // Hide the current question and show the next one after 1.5 seconds
        setTimeout(() => {
          document.getElementById(`question-${questionNumber}`).style.display = 'none';
          if (questionNumber < 6) {
            document.getElementById(`question-${questionNumber + 1}`).style.display = 'block';
          } else {
            // Show the final message
            const finalMessage = document.getElementById('final-message');
            finalMessage.style.display = 'block'; // Ensure the final message is visible
          }
        }, 1000);
      } else {
        answerText.innerText = "Oops! Try again. ðŸ˜…";
        answerText.style.color = "#e74c3c"; // Red color for incorrect answer
        answerText.style.opacity = '1'; // Ensure the message is visible
      }
    }
  </script>
